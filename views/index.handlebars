<h1>Burgers!</h1>

<h2>Burgers ready to eat!</h2>

<ul>
  {{#each burger_table}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Eat!</button>
        </form>

   
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured (Eaten)!</h2>

<ul>
  {{#each burger_table}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}


      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Not Eaten</label><br>
    <input type="radio" name="devoured" value="0" checked> Not Eaten!<br>
  </div>

  <button type="submit">Add Burger</button>
</form>
